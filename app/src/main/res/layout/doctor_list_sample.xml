<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_4mdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_3mdp"
        android:elevation="@dimen/_48mdp"
        app:cardCornerRadius="@dimen/_16mdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/igDoctorImage"
                android:layout_width="@dimen/_100mdp"
                android:layout_height="@dimen/_100mdp"
                android:layout_margin="@dimen/_4mdp"
                android:scaleType="centerCrop"
                android:src="@drawable/drdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txDoctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Dr. Smith"
                android:textColor="@color/blue"
                android:textSize="@dimen/_16font_mdp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.302"
                app:layout_constraintStart_toEndOf="@+id/igDoctorImage"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txSpecialist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8mdp"
                android:text="Teeth Disease"
                android:textColor="@color/blue"
                android:textSize="@dimen/_12font_mdp"
                app:layout_constraintEnd_toEndOf="@+id/txDoctorName"
                app:layout_constraintStart_toStartOf="@+id/txDoctorName"
                app:layout_constraintTop_toBottomOf="@+id/txDoctorName" />

            <TextView
                android:id="@+id/txHospitalName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Civil Hospital"
                android:textColor="@color/blue"
                android:textSize="@dimen/_14font_mdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/txSpecialist"
                app:layout_constraintStart_toStartOf="@+id/txSpecialist"
                app:layout_constraintTop_toBottomOf="@+id/txSpecialist" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>